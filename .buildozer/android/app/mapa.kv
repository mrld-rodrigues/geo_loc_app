#:import dp kivy.metrics.dp

<MainRoot>:
    FloatLayout:
        MapView:
            id: mapview
            lat: -23.5505
            lon: -46.6333
            zoom: 15
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}

        Label:
            id: coordinates
            size_hint: None, None
            size: dp(250), dp(40)
            pos_hint: {"top": 0.98, "right": 0.98}
            text: "Localização: ---"
            color: 1, 1, 1, 1
            font_size: "16sp"
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, 10, 10, 10]


        Button:
            text: "X"
            size_hint: None, None
            size: dp(64), dp(64)
            center_x: root.width / 2
            pos_hint: {"y": 0.02}
            background_normal: ""
            background_color: 0.83, 0.33, 0.31, 1
            color: 0, 0, 0, 1
            font_size: "28sp"
            bold: True

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.2
                RoundedRectangle:
                    pos: self.x + dp(2), self.y - dp(2)
                    size: self.size
                    radius: [dp(32), dp(32), dp(32), dp(32)]
                Color:
                    rgba: self.background_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(32), dp(32), dp(32), dp(32)]

            on_release:
                app.exit_app()
